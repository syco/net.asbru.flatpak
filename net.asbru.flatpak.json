        "cd XML-Parser && perl Makefile.PL PREFIX=/app && make && make install",
        "cd YAML && perl Makefile.PL PREFIX=/app && make && make install",
        "cd ossp-uuid && ./configure --prefix=/app --with-perl && make && make install"
